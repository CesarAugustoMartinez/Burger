<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
    <p class="lead">Enter the name of the burger that you would like to eat</p>
  </div>
</div>

<div class='row'>
    <div class="col s6">
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col s6">
        <ul class="list-group">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
</div>

<h2>Eat-Da-Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>
