<div class="card text-center">
    <div class="jumbotron jumbotron-fluid p-3 mb-2 bg-warning text-dark">
    <div class="container">
        <img src="/assets/images/burger.png" class="rounded mx-auto d-block" style="max-width: 15%;">
        <h1 class="display-4">Eat-Da-Burger</h1>        
    </div>
    </div>
</div>    
    <div class="card-body">
        <div class='row'>
            <div class="col s6">
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col s6">
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                <p>
                    <p class="lead">Enter the name of the burger that you would like to eat</p>
                    <form class="create-form">

                        <div class="form-group">
                            <label for="ca">Burger Name:</label>
                            <input type="text" id="bu" name="burger_name">
                        </div>
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </form>
                </p>
            </div>
        </div>
    </div>
